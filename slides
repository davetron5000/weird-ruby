    end
  end
end

!CODE: language=ruby
class Person
  attr_accessor :name, 
                :birthdate 

  def initialize(name,birthdate)
    @name      = name
    @birthdate = birthdate
  end

  def greeting
    "Hello #{name}"
  end
end

!CODE: language=ruby
class TitledPerson < Person
  attr_accessor :title

  def initialize(name,birthdate,title)
    super(name,birthdate)
    @title = title
  end

  def greeting
    "Hello #{title} #{name}"
  end
end

!CODE: language=ruby
$nil = Object.new do
  def nil?
    true
  end
end

!CODE: language=ruby callout=-1,-2,-3,-4,-5
$nil = Object.new do
  def nil?
    true
  end
end

